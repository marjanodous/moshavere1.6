<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/colorText">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:layoutDirection="rtl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/rezume"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/shape_border_logo"
                    android:id="@+id/img_rezume"
                    android:layout_margin="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/shape_cv"
                    android:layout_toLeftOf="@id/img_rezume"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textStyle="bold"
                        android:id="@+id/name_moshaver_zezume"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="paye_hoquqi"
                        android:textSize="14sp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_below="@id/name_moshaver_zezume"
                        android:id="@+id/paye_hoquqi_moshaver_list"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="madrak tahsili"
                        android:textSize="14sp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_below="@id/paye_hoquqi_moshaver_list"
                        android:id="@+id/madrak_hoquqi_moshaver"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سابقه کار"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/img_rezume"
                    android:id="@+id/txt1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متن سابقه کار"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt1"
                    android:id="@+id/txt_sabeqe_rezume"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رزومه"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_sabeqe_rezume"
                    android:id="@+id/txt2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متن رزومه"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt2"
                    android:id="@+id/txt_rezume_rezume"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimaryText"
                    android:layout_below="@+id/txt_rezume_rezume"
                    android:id="@+id/txtline"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آدرس"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtline"
                    android:id="@+id/txt3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متن آدرس"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt3"
                    android:id="@+id/txt_address_rezume"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره تماس"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_address_rezume"
                    android:id="@+id/txt4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متن شماره تماس"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt4"
                    android:id="@+id/txt_phone_rezume"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ایمیل"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_phone_rezume"
                    android:id="@+id/txt5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آدرس ایمیل"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt5"
                    android:id="@+id/txt_email_rezume"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>