<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@drawable/login">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/shape_border_login"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_centerInParent="true"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo2"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="user name :"-->
        <!--android:layout_margin="10dp"/>-->
        <EditText
            android:id="@+id/edtunamesingup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_menu"
            android:inputType="text"
            android:hint="نام کاربری"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:padding="5dp"
            android:textDirection="rtl"
            android:layout_margin="6dp"
            android:layout_below="@id/logo"/>
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="password :"-->
        <!--android:layout_margin="10dp"/>-->
        <EditText
            android:id="@+id/edtpnamesingup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_menu"
            android:inputType="numberPassword"
            android:hint="رمز عبور"
            android:maxLength="8"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_below="@id/edtunamesingup"
            android:textDirection="rtl"
            android:textAlignment="viewStart"
            android:layout_margin="6dp"/>
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Email :"-->
        <!--android:layout_margin="10dp"/>-->
        <EditText
            android:id="@+id/edtemailsingup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_menu"
            android:inputType="textEmailAddress"
            android:hint="ایمیل"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_below="@id/edtpnamesingup"
            android:layout_margin="6dp"/>
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="phone :"-->
        <!--android:layout_margin="10dp"/>-->
        <EditText
            android:id="@+id/edtphonesingup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_menu"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="شماره تماس"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_below="@id/edtemailsingup"
            android:textDirection="rtl"
            android:textAlignment="viewStart"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sabtnam"
            android:id="@+id/ok_sing_up"
            android:layout_below="@id/edtphonesingup"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/shape_border_menu"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/txtgotologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorText"/>
    </RelativeLayout>




</RelativeLayout>