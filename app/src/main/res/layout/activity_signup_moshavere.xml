<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singup_moshavere"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@drawable/singup">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:layoutDirection="rtl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/signup_moshaver"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border_login">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_add_moshaver"
                        android:id="@+id/add_img_moshaver"
                        android:padding="10dp"
                       android:background="@drawable/shape_border_menu"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام و نام خانوادگی"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp"
                    android:layout_below="@+id/add_img_moshaver"
                    android:id="@+id/txt1"/>
                    <EditText
                        android:id="@+id/edt_user_name_sing_up_moshaver"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="text"
                        android:hint="نام و نام خانوادگی خود را وارد کنید"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textDirection="rtl"
                        android:layout_margin="6dp"
                        android:layout_below="@id/txt1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رمز عبور"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_user_name_sing_up_moshaver"
                        android:id="@+id/txt2"/>
                    <EditText
                        android:id="@+id/edt_password_singup_moshaver"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="numberPassword"
                        android:hint="رمز عبور را وارد کنید"
                        android:maxLength="8"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt2"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ایمیل"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_password_singup_moshaver"
                        android:id="@+id/txt3"/>
                    <EditText
                        android:id="@+id/edt_email_singup_moshaver"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="textEmailAddress"
                        android:hint=" ایمیل خود را وارد کنید"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt3"
                        android:layout_margin="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شماره تماس"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_email_singup_moshaver"
                        android:id="@+id/txt4"/>
                    <EditText
                        android:id="@+id/edt_phone_singup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:hint=" شماره تماس خود را وارد کنید"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt4"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سابقه کار"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_phone_singup"
                        android:id="@+id/txt5"/>
                    <EditText
                        android:id="@+id/edt_sabeqe_singup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="number"
                        android:maxLength="2"
                        android:hint=" چند سال سابقه کار دارید؟"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt5"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="آخرین مدرک تحصیلی"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_sabeqe_singup"
                        android:id="@+id/txt6"/>
                    <EditText
                        android:id="@+id/edt_madrak_singup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="text"
                        android:hint="آخرین مدرک تحصیلی خود را وارد کنید"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt6"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رتبه حقوقی"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_madrak_singup"
                        android:id="@+id/txt7"/>
                    <EditText
                        android:id="@+id/edt_rotbe_singup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="text"
                        android:hint="مانند وکیل پایه یک دادگستری"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt7"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="آدرس "
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_rotbe_singup"
                        android:id="@+id/txt8"/>
                    <EditText
                        android:id="@+id/edt_address_singup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="text"
                        android:maxLines="2"
                        android:hint="ساری - خیابان فرهنگ"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt8"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رزومه"
                        android:maxLines="3"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:layout_below="@+id/edt_address_singup"
                        android:id="@+id/txt9"/>
                    <EditText
                        android:id="@+id/edt_rezume_singup"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/shape_border_menu"
                        android:inputType="text"
                        android:hint="رزومه خود را وارد کنید"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_below="@id/txt9"
                        android:textDirection="rtl"
                        android:textAlignment="viewStart"
                        android:layout_margin="6dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sabtnam"
                        android:id="@+id/ok_sing_up_moshaver"
                        android:layout_below="@id/edt_rezume_singup"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="6dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@drawable/shape_border_menu"
                        android:textColor="@color/colorAccent"/>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</LinearLayout>