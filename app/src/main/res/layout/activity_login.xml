<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/login">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/shape_border_login"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_centerInParent="true"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo2"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            />

        <EditText
            android:id="@+id/username_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_menu"
            android:inputType="text"
            android:hint="نام کاربری"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:padding="5dp"
            android:textDirection="rtl"
            android:layout_margin="6dp"
            android:layout_below="@id/logo"/>

        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_menu"
            android:inputType="numberPassword"
            android:hint="رمز عبور"
            android:maxLength="8"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:padding="5dp"
            android:textDirection="rtl"
            android:textAlignment="viewStart"
            android:layout_margin="6dp"
            android:layout_below="@id/username_login"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vorud"
            android:id="@+id/ok_sing_up"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/shape_border_menu"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/password_login"/>

        <TextView
            android:id="@+id/txtgotosingup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nologin"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorText"/>
    </RelativeLayout>



</RelativeLayout>